# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sales_copilot
DB_USER=postgres
DB_PASSWORD=your_password

# HubSpot Configuration
# Required OAuth Scopes:
# - crm.objects.contacts.read
# - crm.objects.contacts.write
# - crm.objects.companies.read
# - crm.objects.deals.read
# - crm.objects.lists.read
# - crm.lists.read
# - crm.objects.owners.read
# - automation.workflows.write
HUBSPOT_CLIENT_ID=your_client_id # Get this from your HubSpot app settings
HUBSPOT_CLIENT_SECRET=your_client_secret # Get this from your HubSpot app settings
HUBSPOT_HIGH_PRIORITY_WORKFLOW_ID=your_workflow_id
HUBSPOT_PORTAL_ID=your_portal_id

# Lead Scoring Configuration
LEAD_SCORE_UPDATE_INTERVAL=300000 # 5 minutes in milliseconds
LEAD_SCORE_MIN_CONFIDENCE=0.7
LEAD_SCORE_RETRAIN_INTERVAL=604800000 # 7 days in milliseconds
LEAD_SCORE_MODEL_VERSION=1.0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Other Configurations
NODE_ENV=development
PINECONE_ENVIRONMENT=gcp-starter 